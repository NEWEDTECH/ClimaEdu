rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all users for development
    // In production, you should restrict access based on authentication and authorization
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Example of a more restrictive rule for users collection
    // match /users/{userId} {
    //   allow read: if request.auth != null;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
    
    // Example of a more restrictive rule for contents collection
    // match /contents/{contentId} {
    //   allow read: if true;
    //   allow write: if request.auth != null;
    // }
  }
}
